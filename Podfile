# Uncomment this line to define a global platform for your project

abstract_target 'alamofire_activity_logger' do
	use_frameworks!
	pod 'Alamofire', '5.0.2'
    pod 'AlamofireActivityLogger', :path => '.'
    
    target 'ios' do
        platform :ios, '10.2'
    end
    
    target 'macos' do
        platform :osx, '10.12'
    end
    
    target 'watchos Extension' do
        platform :watchos, '3.0'
    end
    
    target 'tvos' do
        platform :tvos, '10.0'
    end
    
end
